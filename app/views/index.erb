<% if @user %>
  <a href="/users/log_out">Log Out</a>
<% else %>
  <a href="/users/log_in">Log In</a>/<a href="/users/new">Sign Up</a>
<% end %>
<% if @user %>
  <h1>Hi <%= @user.username %>!</h1>
<% end %>
<h1>
  Welcome to Chitter!
</h1>

<form action="/add" method="post">
  <div>
    <label for="">
    <input type="text" placeholder="Say Something" id="text" name="text">
  </div>
  <div class="button">
    <button type="submit" value="Say Something">Say Something</button>
  </div>
</form>

<h2>
  Peeps:
</h2>

<ul>
  <% @peeps.each do |peep| %>
    <li class="peep" id="peep-<% peep.id %>">
      <%= peep.text %>
      <ul>
        <li>
          Posted at: <%= peep.time %>
        </li>
      </ul>
    </li>
  <% end %>
</ul>
